<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThirdActivity">
    <RelativeLayout
        android:id="@+id/RelativeBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/imgArrowBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_back_white"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_Add"
            android:layout_toEndOf="@+id/imgArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Centre Name"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
    *<RelativeLayout
        android:id="@+id/RelativeOtp"
        android:layout_below="@+id/RelativeBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
    <RelativeLayout
        android:id="@+id/rl_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_otpSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            >
            <TextView
                android:id="@+id/tv_otpMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have sent a 4 digit OTP on "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_otpNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 9999999999 "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otpBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_otpSend"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">
            <EditText
                android:textCursorDrawable="@null"
                android:background="@drawable/bg_circle"
                android:id="@+id/OTP_ET_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:maxLength="1"
                android:hint="0"
                android:textSize="@dimen/text_size_medium"
                android:inputType="phone"/>
            <EditText
                android:textCursorDrawable="@null"
                android:background="@drawable/bg_circle"
                android:id="@+id/OTP_ET_2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:hint="0"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="1"
                android:inputType="phone"/>
            <EditText
                android:textCursorDrawable="@null"
                android:background="@drawable/bg_circle"
                android:id="@+id/OTP_ET_3"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:hint="0"
                android:maxLength="1"
                android:inputType="phone"/>
            <EditText
                android:textCursorDrawable="@null"
                android:background="@drawable/bg_circle"
                android:id="@+id/OTP_ET_4"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:hint="0"
                android:maxLength="1"
                android:inputType="phone"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_otpBox"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorText"
                android:layout_margin="10dp"
                android:padding="5dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="30dip"
                android:background="@color/colorText"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_changeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change mobile number"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorText"
                android:layout_margin="10dp"
                android:padding="5dp"/>
        </LinearLayout>


    </RelativeLayout>
    <Button
        android:id="@+id/btnValidate"
        android:layout_below="@+id/rl_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_medium"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/RelativeOk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <ImageView
        android:id="@+id/imgOk"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ok"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tvSuccess"
        android:layout_below="@+id/imgOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP validated successfully....!!"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnok"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_marginBottom="40dp"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

</RelativeLayout>