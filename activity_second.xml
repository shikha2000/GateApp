<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SecondActivity">

    <RelativeLayout
        android:id="@+id/RelBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_back_white"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tvAdd"
            android:layout_toEndOf="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Center Name"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollviewReason"
        android:layout_below="@+id/RelBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="50dp"
        android:src="@drawable/excellogo"/>

    <RelativeLayout
        android:layout_below="@+id/imglogo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/RelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_icon"
            android:layout_margin="10dp">
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Your Name Here"
        android:background="@null"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorText"
        />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelMobile"
        android:layout_below="@+id/RelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_edittext_icon"
        >

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorText"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/etNumber"
            android:layout_toEndOf="@+id/tvCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:hint="Enter 10-digit mobile number"
            android:background="@null"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorText"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RelReason"
            android:layout_below="@+id/RelMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_edittext_icon">
            <Spinner
                android:id="@+id/SpinnerReason"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/Field"
                android:gravity="center"
                android:spinnerMode="dialog"/>0
        </RelativeLayout>

    <Button
        android:id="@+id/BtnGo"
        android:layout_below="@+id/RelReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>